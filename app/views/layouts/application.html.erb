<!DOCTYPE html>
<html>
<head>
  <title>WikifulRedux</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="container">
		
		<% if flash[:notice] -%>
		<div class = "alert alert-success">
			<a class="close" data-dismiss="alert">x</a>
			<%= flash[:notice] %>
		</div>
		<% end %>
		<% if flash[:error] -%>
		<div class = "alert alert-error">
			<a class="close" data-dismiss="alert">x</a>
			<%= flash[:error] %>
		</div>
		<% end %>
		<% if flash[:warning] -%>
		<div class = "alert alert-warning">
			<a class="close" data-dismiss"alert">x</a>
			<%= flash[:warning] %>
		</div>
		<% end %> 
		<%= yield %>
	</div>

</body>
</html>