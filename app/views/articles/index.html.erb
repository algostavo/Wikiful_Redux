<h1>Articles to Read!</h1>
	<%= form_for @article do |f| %>
	  <div class="field">
	    <%= f.label :title %>
	      <%= f.text_field :title %>
	  </div>
	  <div class="field">
	    <%= f.label :text %>
	      <%= f.text_area :text, rows: "20", cols: "100" %>
	  </div>

	  <div class='field'>
	    <%= f.label 'Enter or select a category' %>
	    <% Category.all.order(title: :asc).each do |category| %>
	      <div>
	        <%= check_box_tag "article[category_ids][]", category.id %>
	        <%= category.name %>
	      </div>
	    <% end %>
	  </div>

	  <div class="form-actions">
	    <%= f.submit nil %>
	    <%= link_to 'Cancel', articles_path %>
	  </div>
	<% end %>
	