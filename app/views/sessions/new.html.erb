<div class="page-header">
	<h1>Log In</h1>
</div>
<%= form_tag "login" do %>
<div class="field">
	<%= label_tag :email %><br />
	<%= text_field_tag :email, params[:email]%>
</div>
<div class="field">
	<%=label_tag :password %><br />
	<%= text_field_tag :password, params[:password], :type => "password" %>
</div>
<div class="actions"><%= submit_tag "Submit" %></div>
</br>
<%= link_to "Sign Up Here!", signup_path %>
<% end %>

	